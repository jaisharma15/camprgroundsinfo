<div class="container">
    <div>
       <h1>Add New Comment to <%= campground.name %></h1>
       <div style="width:30%; margin:25x auto;">
            <form  action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group"> 
                    <input class="form-control" type="text" name="comment[text]" placeholder="text"></div>
                
                    <button class="btn btn-primary btn-lg btn-block">Submit</button></div>
                </form> 
                <a href="/campgrounds">Go Back</a>
       </div>
     </div>
</div>
